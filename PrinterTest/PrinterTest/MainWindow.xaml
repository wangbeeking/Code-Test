<Window x:Class="PrinterTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        Name="control">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                <Button Content="Get Printer List" Click="Button_Click_1"/>
                <TextBox Text="{Binding ElementName=control, Path=TestStr}"/>
            </StackPanel>
        <DataGrid DockPanel.Dock="Bottom">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Printer Name"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Grid>
</Window>
